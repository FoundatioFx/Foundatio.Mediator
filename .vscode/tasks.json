{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build solution",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "run tests",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "update benchmark docs",
			"type": "shell",
			"command": "pwsh",
			"args": [
				"-File",
				"${workspaceFolder}/.github/scripts/Update-BenchmarkDocs.ps1"
			],
			"problemMatcher": []
		},
		{
			"label": "run foundatio benchmarks",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"-c",
				"Release",
				"--",
				"foundatio"
			],
			"options": {
				"cwd": "${workspaceFolder}/benchmarks/Foundatio.Mediator.Benchmarks"
			},
			"problemMatcher": []
		},
		{
			"label": "run comparison benchmarks",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"-c",
				"Release"
			],
			"options": {
				"cwd": "${workspaceFolder}/benchmarks/Foundatio.Mediator.Benchmarks"
			},
			"problemMatcher": []
		}
	]
}